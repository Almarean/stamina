{% extends 'navbar.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <section class="page">
            <article class="my-5">
                <form class="text-center border border-light p-5" action="{{ path('login') }}" method="POST">
                    <div>
                        {% if message is defined %}
                            <p class="text-success"><i class="fas fa-check"></i> {{ message }}</p>
                        {% endif %}
                    </div>
                    <p class="h4 mb-4 brown-text">Se connecter</p>
                    <input type="email" class="form-control mb-4 col-md-6 mx-auto" placeholder="Adresse e-mail" name="_username" required autofocus>
                    <input type="password" class="form-control mb-4 col-md-6 mx-auto" placeholder="Mot de passe" name="_password" required>
                    <div class="d-flex justify-content-around">
                        <div>
                            <a href="#" class="brown-text">Mot de passe oubli√© ?</a>
                        </div>
                    </div>
                    <button class="btn btn-brown btn-block my-4 col-md-4 mx-auto" type="submit"><i class="fas fa-dungeon"></i> Se connecter</button>
                    <p>Pas encore inscrit ?
                        <a href="{{ path('registration') }}" class="brown-text">S'enregistrer</a>
                    </p>
                </form>
            </article>
        </section>
    </div>
    {{ include('footer.html.twig') }}
{% endblock %}